# Environment Variables for Inventory Management System

# Database Configuration
DATABASE_URL=postgresql://postgres:password123@postgres:5432/inventory_db

# OpenAI API Key (required for voice assistant feature)
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
NODE_ENV=production
PORT=5000

# Session Configuration
SESSION_SECRET=your_secure_session_secret_here

# Database Backup Configuration (optional)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *